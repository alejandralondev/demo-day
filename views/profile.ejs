        <h2>Add an item</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="name of item" name="name">
            <div>
              <label for="date-bought">Date Bought</label>
              <input type="date" class="form-control" name="dateBought" required>
            </div>
            <div>
              <label for="expiration-date">Expiration Date</label>
              <input type="date" class="form-control" name="expirationDate" required>
            </div>
            <input type="text" placeholder="note" name="msg">
            <input type="text" placeholder="cost" name="price">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

        <div class="col-sm-6">
          <h3>Grocery Tracking</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class="itemName"><%= messages[i].name %></span>
              <span class="dateBought"><%= messages[i].dateBought %></span>
              <span class="expirationDate"><%= messages[i].expirationDate %></span>
              <span class="msg"><%= messages[i].msg %></span>
              <span class="price"><%= messages[i].price %></span>
              <span class="thumbUpLi"><%= messages[i].thumbUp %></span>
              <span><button class="fa fa-thumbs-up" aria-hidden="true">Increase Quantity</button></span>
              <span><button class="fa fa-thumbs-down" aria-hidden="true">Decrease Quantity</button></span>
              <span><button class="fa fa-trash" aria-hidden="true">Delete</button></span>
            </li>
          <% } %>
          </ul>

